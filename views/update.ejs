<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Update Data</title>
</head>

<body>
    <h1>Update Data</h1>
    <form action="/update/<%= data.student_id %>" method="post">
        <div class="input-wrapper">
            <div class="kiri">
                <label for="nama">Name:</label>
                <input type="text" placeholder="Nama anda..." id="nama" name="nama" value="<%= data.nama %>" required>
                <label for="class">Class:</label>
                <select id="kelas" name="kelas" required>
                    <option value="XI RPL" <%=data.kelas==='XI RPL' ? 'selected' : '' %>>XI RPL</option>
                    <option value="XI TKJ" <%=data.kelas==='XI TKJ' ? 'selected' : '' %>>XI TKJ</option>
                    <option value="XI KES" <%=data.kelas==='XI KES' ? 'selected' : '' %>>XI KES</option>
                </select>
                <label for="hobi">Hobi:</label>
                <input placeholder="Hobi Anda..." type="text" id="hobi" name="hobi" value="<%= data.hobi %>" required>
                <label for="nomor">Nomor:</label>
                <input placeholder="+62 xxx xxxx xxx" type="text" id="nomor" name="nomor" value="<%= data.nomor %>" onkeyup="validateInput(event)"
                    required>
                <label for="alamat">Alamat:</label>
                <input type="text" id="alamat" name="alamat" value="<%= data.alamat %>" required>
            </div>
            <div class="kanan">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= data.email %>"
                    onsubmit="validateEmailAndSubmit(event)" required>
                <label for="gender">Jenis Kelamin:</label>
                <select id="gender" name="gender" required>
                    <option value="Male" <%=data.kelas==='Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%=data.kelas==='Female' ? 'selected' : '' %>>Female</option>
                </select>
                <label for="umur">Umur:</label>
                <input type="text" id="umur" name="umur" value="<%= data.umur %>" onkeyup="validateInput(event)"
                    required>
                <label for="nilai">Nilai:</label>
                <input type="text" id="nilai" name="nilai" value="<%= data.nilai %>" onkeyup="validateInput(event)"
                    required>
                <label for="nama_orangtua">Nama Orang Tua:</label>
                <input type="text" id="nama_orangtua" name="nama_orangtua" value="<%= data.nama_orangtua %>" required>
            </div>
        </div>
        <button class="primary-button" type="submit">Update</button>
    </form>

    <a href="/">Kembali Ke Tabel</a>
    <script>
        function validateInput(event) {
            const input = event.target;
            const inputValue = input.value;
            const regex = /^[0-9]+$/;

            if (!regex.test(inputValue)) {
                input.value = inputValue.replace(/[^0-9]/g, '');

            }
        }
    </script>
    <script>
        function validateEmailAndSubmit(event) {
            const emailInput = document.getElementById("email");
            const emailValue = emailInput.value.trim();

            if (!emailValue) {
                event.preventDefault();
                alert("Please enter valid email address.");
                input.classList.add("invalid");
                return;
            }
            event.target.submit();
        }
        const form = document.getElementById("email");
        form.addEventListener("submit", validateEmailAndSubmit);

    </script>
</body>

</html>